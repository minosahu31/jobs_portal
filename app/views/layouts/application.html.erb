<!DOCTYPE html>
<html>
<head>
  <title>JobsPortal</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

	<nav class="navbar navbar-default">
		<div class="container">
			<div class="navbar-header">
				<%= link_to "Companies", companies_path, class: "navbar-brand" %>
			</div>	
			<ul class="nav navbar-nav pull-right">
				<% if !candidate_signed_in? %>
					<li><%= link_to "Sign Up", new_candidate_registration_path, class: "btn btn-default pull-right" %></li>
				<% end %>	
				<% if candidate_signed_in? %>
					<li><%= link_to "Sign Out", destroy_candidate_session_path, method: :delete, class: "btn btn-default pull-right" %></li>
				<% else %>
					<li><%= link_to "Login", new_candidate_session_path, class: "btn btn-default pull-right" %></li>
				<% end %>
			</ul>
		</div>	
	</nav>	

	 <p class="notice text-center"><%= notice %></p>
     <p class="alert text-center"><%= alert %></p>

<%= yield %>

</body>
</html>
